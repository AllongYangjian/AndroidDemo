<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="style_bottom_nav_rb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/selector_bottom_nav_rb_textcolor</item>
        <item name="android:background">@drawable/selector_bottom_nav_rb_background</item>
    </style>

    <declare-styleable name="TagView">
        <attr name="tgBackground" format="reference"/>
        <attr name="tgSelectTextColor" format="reference"/>
        <attr name="tgTextColor" format="color"/>
        <attr name="tgBorder" format="dimension"/>
        <attr name="tgTextSize" format="dimension"/>
        <attr name="tgBorderItem" format="dimension"/>
        <attr name="tgItemBorderVertical" format="dimension"/>
        <attr name="tgItemBorderHorizontal" format="dimension"/>
        <attr name="tgSingleLine" format="boolean"/>
        <attr name="tgShowEndText" format="boolean"/>
        <attr name="tgShowRightImg" format="boolean"/>
        <attr name="tgEndText" format="string"/>
        <attr name="tgRightResId" format="reference"/>
        <attr name="tgCanTagClick" format="boolean"/>
        <attr name="tgTagResId" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="TagView2">
        <attr name="lineMargin" format="dimension" />
        <attr name="tagMargin" format="dimension" />
        <attr name="textPaddingLeft" format="dimension" />
        <attr name="textPaddingRight" format="dimension" />
        <attr name="textPaddingTop" format="dimension" />
        <attr name="textPaddingBottom" format="dimension" />
    </declare-styleable>
</resources>
