<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.example.yj.customview.MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_ui"
            style="@style/style_bottom_nav_rb"
            android:drawableTop="@drawable/selector_bottom_nav_rb_ui_drawable"
            android:text="@string/text_desc_custom_view"/>

        <RadioButton
            android:id="@+id/rb_net_and_media"
            style="@style/style_bottom_nav_rb"
            android:drawableTop="@drawable/selector_bottom_nav_rb_media_drawable"
            android:text="@string/text_desc_net_and_media"/>

        <RadioButton
            android:id="@+id/rb_system_and_hardware"
            style="@style/style_bottom_nav_rb"
            android:drawableTop="@drawable/selector_bottom_nav_rb_system_drawable"
            android:text="@string/text_desc_system_and_hardware"/>

        <RadioButton
            android:id="@+id/rb_comprehensive"
            style="@style/style_bottom_nav_rb"
            android:drawableTop="@drawable/selector_bottom_nav_rb_more_drawable"
            android:text="@string/text_desc_comprehensive"/>
    </RadioGroup>
</LinearLayout>
